{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci && npm run build",
    "nixpacksPlan": {
      "phases": {
        "build": {
          "cmd": "npm ci && npm run build",
          "cacheDirectories": []
        }
      }
    }
  },
  "deploy": {
    "outputDirectory": "dist",
    "sleepApplication": false
  }
}