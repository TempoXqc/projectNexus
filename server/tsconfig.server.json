{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "server/src",
    "baseUrl": "../",
    "target": "ES2020",
    "paths": {
      "@types/*": ["types/*"]
    }
  },
  "include": ["server/src/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist"]
}
